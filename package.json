{
  "name": "lerna-experiments",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "typescript": {
    "main": "index.ts"
  },
  "scripts": {
    "start-server": "nodemon static-server.js",
    "bootstrap": "lerna bootstrap  --stream --hoist --ignore-scripts",
    "packagr": "lerna run packagr",
    "clean:node_modules": "lerna clean",
    "clean:build": "rimraf dist/*",
    "build": "lerna run build --concurrency 1",
    "start:reports": "lerna run start --stream --scope reports",
    "start:insights": "lerna run start --stream --scope insights",
    "ensureEverythingCommited": "git diff --quiet --exit-code && git diff --quiet --exit-code --cached"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "lerna": "^2.9.0",
    "rimraf": "^2.6.2",
    "static-server": "^2.2.1"
  }
}
